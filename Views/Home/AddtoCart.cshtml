@{
    ViewBag.Title = "AddtoCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function CheckQuantity() {
        debugger;
        var value = $('#quan').val();
        var value1 = @(Model.Quantity) ;
        if ( value1< value )
        {

            alert("Quantity Is Not Valid");
            document.getElementById("quan").focus();

        }
        if(value<1) {

            alert("Quantity Is Not Valid");
            document.getElementById("quan").focus();

        }
        else
        {
            var sss=$('#quan').val();
            var saa  = "/Home/Cart?id=" +@Model.Id +"&&q=" + sss;
            $('#carta').prop('href', saa);
            return true;
        }


    }
</script>


