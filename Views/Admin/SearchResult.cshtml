@{
    ViewBag.Title = "SearchResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

@using Term_Project.Models;

<form action="/Admin/SearchResult" class="form-control">
    <input type="text" name="Name" placeholder="Name Of Item" />
    <input type="text" name="Id" placeholder="Id" />
    <select name="category">
        <option value="null">Select</option>
        <option value="Hockey">Hockey</option>
        <option value="Cricket">Cricket</option>
        <option value="Football">Foot Ball</option>
    </select>
    <input type="submit" value="Search" />
</form>
<div class=" container-fluid" style="margin:1%"> 
    <div class="mainbodyforitems" align="center">
    @foreach(item v in Model){
        <div class="divforitems" >
            <img src="@(v.Pic)" height="200" class="imgs" id="1-img">
            <b> <span style="color:white"> Price :<span id="1-P">{@v.price } &nbsp &nbsp Quantity : {@v.Quantity }  </span></span></b>
            <p class="alert-info">@v.Dscription_</p>
            <input type="submit" value="Add To Cart" onclick="Myfunctions()" class="pull-right" style=" margin:4px" />
        </div>
    }
    
    </div>

</div>